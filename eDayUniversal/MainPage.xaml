        <CommandBar Background="{x:Null}" AllowDrop="True" BorderBrush="{x:Null}" ClosedDisplayMode="Compact">
            <AppBarButton x:Uid="AddAppBarButton" x:Name="AddEventButton1" Label="добавить" Icon="Add" Click="AddAppBarButton_Click" />
